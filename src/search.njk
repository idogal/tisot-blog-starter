<div class="flex flex-col min-h-screen">
<div class="mt-12 grow ">
    <div x-data="searchInput" class="">
            <div class="flex justify-center">
                <div class="form-control w-full max-w-xs">
                    <label class="label">
                        <span class="label-text text-base">{{ "Enter search term" | i18n }}</span>
                    </label>
                    <input type="text" 
                            placeholder="{{ "Type here" | i18n }}" 
                            x-model="inputVal" 
                            x-on:input.keydown="getItems(inputVal)" 
                            class="input input-bordered w-full max-w-xs"/>
                </div>
            </div>
            <div id="search_results" class="flex justify-center mt-6">
                <div class=" lg:w-6/12">
                    <ul id="search_results_ul" class="space-y-1.5 leading-relaxed">
                    </ul>                
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/elasticlunr/0.9.6/elasticlunr.min.js"></script>
<script src="/assets/js/search.js"></script>