{% if previous_post or next_post %}
<div class="pt-3 pb-3 lg:pb-0 italic text-primary ">            
    {% set previousSegmentUrl = (page.url | removeLastUrlPart) %}
    {% set previousPostUrl = ((previousSegmentUrl + "/" + previous_post + "/") | removeDuplicateForwardSlashes) %}
    {% set nextPostUrl = ((previousSegmentUrl + "/" + next_post + "/") | removeDuplicateForwardSlashes) %}
    <span>
    {{ 'This post is part of a series' | i18n }}.
    {% if previous_post %} <a class="text-primary no-underline hover:bg-secondary " href="{{ previousPostUrl }}">{{ 'To the previous post' | i18n }}</a>.{% endif %}
    {% if next_post %} <a class="text-primary no-underline hover:bg-secondary " href="{{ nextPostUrl }}">{{ 'To the next post' | i18n }}</a>.{% endif %}
    </span>
</div>
{% endif %}