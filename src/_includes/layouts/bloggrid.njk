---
layout: "layouts/base.njk"
pagination:
  data: collections.posts
  size: 4
  alias: posts
---

<div class="container mx-auto py-6 px-6 lg:px-24">
    <div class="grid lg:grid-cols-2 grid-cols-1 gap-6">
        {% for post in posts %}
            <div class="card rounded-md mx-1 md:mx-4 my-1 md:my-2 shadow-md">
                <figure class="relative">
                    <a href="{{ post.url }}">
                        <img class="" src="{{ post.data.thumbnail }}" alt="Bridge in China"/>
                    </a>                    
                    {% set photoByi18n = 'Photo by' | i18n  %}
                    {% if page.lang == 'he' %} {% set oni18n = 'באמצעות' %} {% else %} {% set oni18n = 'on' %} {% endif %}
                    {% set dir = locales[page.lang].dir %}
                    {% photoCredit photoByi18n, oni18n, 'Tangerine Chan', true, dir %}
                </figure>
                <div class="card-body bg-base-200">
                    <h2 class="card-title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h2>
                    <p>
                        {{ post.data.subtitle }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="container mx-auto text-center mt-12"> 
        {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous }}">{{ 'Previous Page' | i18n }}</a>
        {% endif %}
        {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}">{{ 'Next Page' | i18n }}</a>
        {% endif %}
    </div>
</div>