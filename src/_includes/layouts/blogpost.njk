---
layout: "layouts/base.njk"
publisher: 
---

<section>
    <article class="container mx-auto prose lg:prose-lg prose-base lg:prose-h1:text-5xl prose-h1:text-4xl ">
        <div name="main_text" class="text-center">
            <h1>
                {{ title }}
            </h1>
            <div class="mb-3">
                {% include "partials/social_share_bar.njk" %}
            </div>
            <div class="text-center">
                {% if publish_date %}
                    {{ 'Published on' | i18n }}
                    <b>{{ publish_date | formattedDate }}</b>
                {% endif %}
                {% if published_by %}
                    {{ 'by' | i18n }}
                    <b>{{ published_by }}</b>
                {% endif %}
                <br/>
                {% if trip_date %}
                    {{ 'Trip date' | i18n }}
                    <b>{{ trip_date | formattedDate }}</b>,
                {% endif %}
                {% if trip_length_days %}
                    {{ 'Trip length' | i18n }}
                    <b>{{ trip_length_days }} days</b>,
                {% endif %}
                {% if trip_type %}
                    {{ 'Trip type' | i18n }}
                    <b>{{ trip_type }}</b>
                {% endif %}
            </div>
            <div class="pt-2 text-center">
                {% for tag in tags %}
                    <span class="badge">{{ tag }}</span>
                {% endfor %}
            </div>
            <div class="px-2 lg:px-0">
                <figure class="relative">
                    <img class="w-full" src="{{ head_image }}" alt="This post thumbnail"/>
                    {% if head_image_show_caption %}
                        {% set dir = locales[page.lang].dir %}
                        {% if head_image_caption_text %}
                            {% photoCaption head_image_caption_text, false, dir %}
                        {% else %}
                            {% set photoByi18n = 'Photo by' | i18n %}
                            {% if page.lang == 'he' %}
                                {% set oni18n = 'באמצעות' %}
                            {% else %}
                                {% set oni18n = 'on' %}
                            {% endif %}
                            {% photoCredit photoByi18n, oni18n, 'Tangerine Chan', false, dir %}
                        {% endif %}
                    {% endif %}
                </figure>
            </div>
            {% if content | toc %}
            <aside class="bg-base-200 text-left py-0.5 
                            prose-a:no-underline hover:prose-a:underline 
                            prose-ol:indent-0 prose-ol:list-none prose-ol:pl-0
                            prose-li:pl-2
                            border border-gray-400">
                <div class="indent-2" x-data="{ open: false, buttonText: '[show]' }">
                    <span class="prose-xl font-bold base-content">Table of Content</span>
                    <button class="hover:underline" x-on:click="open = !open, buttonText = open ? '[hide]' : '[show]'" x-text="buttonText"></button>
                    <span class="indent-0.5" x-show="open" x-transition>
                        {{ content | toc | safe }}
                    </span>
                </div>
            </aside>
            {% endif %}
            <div id="content" class="prose-lg">
                {{ content | safe }}
            </div>
        </div>
        {% if site.disqusEnabled %}
            {# <hr/> #}
            <div class="divider"></div>
            <div name="comments">
                {% include "partials/disqus.njk" %}
            </div>
        {% endif %}
    </article>
</section>