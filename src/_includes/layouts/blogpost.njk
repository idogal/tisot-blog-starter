---
layout: "layouts/base.njk"
publisher: 
---

<section>
    <article class="container mx-auto prose prose-lg ">
        <div name="main_text" class="text-center">
            <h1>
                {{ title }}
            </h1>
            {% if publish_date %}
                {{ 'Published on' | i18n }}
                <b>{{ publish_date | formattedDate }}</b>
            {% endif %}
            {% if published_by %}
                {{ 'by' | i18n }}
                <b>{{ published_by }}</b>
            {% endif %}
            <br/>
            {% if trip_date %}
                {{ 'Trip date' | i18n }}
                <b>{{ trip_date | formattedDate }}</b>,
            {% endif %}
            {% if trip_length_days %}
                {{ 'Trip length' | i18n }}
                <b>{{ trip_length_days }} days</b>,
            {% endif %}
            {% if trip_type %}
                {{ 'Trip type' | i18n }}
                <b>{{ trip_type }}</b>
            {% endif %}
            <div class="py-2 text-center">
                {% for tag in tags %}
                    <span class="badge">{{ tag }}</span>
                {% endfor %}
            </div>
            {# {% include "partials/social_share_bar.njk" %} #}
            <div class="px-2 lg:px-0">
                <img class="w-full" src="{{ head_image }}" alt="This post thumbnail"/>
            </div>
            <div id="content" class="">
                {{ content | safe }}
            </div>
        </div>
        {% if site.disqusEnabled %}
            {# <hr/> #}
            <div class="divider"></div>
            <div name="comments">
                {% include "partials/disqus.njk" %}
            </div>
        {% endif %}
    </article>
</section>