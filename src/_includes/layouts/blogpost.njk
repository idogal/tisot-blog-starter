---
layout: "layouts/base.njk"
publisher: I.G.
---

<section>
    <div class="container mx-auto max-w-5xl">
        <article class="">
            <div class="">
                <h1 class="text-3xl text-center font-bold leading-normal mt-0 mb-3">
                    {{ title }}
                </h1>
                <div class="grid grid-cols-2 gap-2"></div>
                <div class="text-lg text-center">
                    <div class="">Published on {{ publish_date | formattedDate }}</div>
                    <div class="">Published by: {{ published_by }}</div>
                </div>
                <div class="m-2 text-center">
                    <span class="badge">#בלגיה</span>
                </div>
                <div class="px-2 py-2 mb-6 lg:px-0">
                    <img
                        class="w-full max-w-2xl mx-auto"
                        src="{{ head_image | url }}"
                        width="960"
                        height="500"
                        alt="This post thumbnail"/>
                </div>
                <div
                    id="content"
                    class="prose prose-lg lg:prose-xl prose-stone
                                                                 max-w-none px-6 lg:px-0">
                        {{ layoutContent | safe }}
                </div>
            </div>
        </article>
    </div>
</section>