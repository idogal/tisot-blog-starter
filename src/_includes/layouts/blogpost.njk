---
layout: "layouts/base.njk"
publisher: 
---

<section>
    <article class="container mx-auto prose prose-lg ">
        <div name="main_text" class="text-center">
            <h1>
                {{ title }}
            </h1>
            {% if publish_date %}
                {{ 'Published on' | i18n }}
                <b>{{ publish_date | formattedDate }}</b>
            {% endif %}
            {% if published_by %}
                {{ 'by' | i18n }}
                <b>{{ published_by }}</b>
            {% endif %}
            <br/>
            {% if trip_date %}
                {{ 'Trip date' | i18n }}
                <b>{{ trip_date | formattedDate }}</b>,
            {% endif %}
            {% if trip_type %}
                {{ 'Trip type' | i18n }}
                <b>{{ trip_type }}</b>
            {% endif %}
            <div class="py-2 text-center">
                {% for tag in tags %}
                    <span class="badge">{{ tag }}</span>
                {% endfor %}
            </div>
            <div class="px-2 lg:px-0">
                <img class="w-full" src="{{ head_image }}" alt="This post thumbnail"/>
            </div>
            <div id="content" class="">
                {{ content | safe }}
            </div>
        </div>
        {% if site.disqusEnabled %}
        <hr>
        <div name="comments">
            <div id="disqus_thread"></div>
            <script>
                /**
                *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
                *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables    
                */
                {% set fullPath = site.sitePath + page.url %}
                var disqus_config = function () {
                    this.page.url = '{{ site.siteUrl }}{{ fullPath | replace("//", "/") }}';  // Replace PAGE_URL with your page's canonical URL variable
                    this.page.identifier = '{{ page.fileSlug }}'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
                };
                
                (function() { // DON'T EDIT BELOW THIS LINE
                var d = document, s = d.createElement('script');
                s.src = 'https://{{ site.disqusShortname }}.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
                })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        </div>
        {% endif %}
    </article>
</section>